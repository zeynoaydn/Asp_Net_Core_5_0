@*@using Entities.Concrete*@
@*@model List<Category>*@

@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<Entities.Concrete.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Index</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>kategori Adı</th>
        <th>Pasif Yap</th>
        <th>Aktif Yap</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td><a href="/Admin/Category/CategoryDelete/@item.CategoryID" id="DeleteBtn"
                onclick="return confirm('Silmek istediğinizze emin miisiniz');"
                class="btn btn-danger">Pasif Yap</a></td>
            <td><a href="#" class="btn btn-warning">Aktif Yap</a></td>
            <td><a href="#" class="btn btn-success">Düzenle</a></td>
        </tr>
    }
</table>

<a href="/Category/AddCategory/" class="btn btn-primary">Yeni Kategori</a>
<br /><br />

@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new {page}))